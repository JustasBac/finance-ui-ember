{{page-title (t 'register-page.page-title')}}
<LoginRegisterPageLayout>
  <div class="flex flex-col justify-center border-opacity-50 xl:w-[25rem]">
    <h3 class="font-semibold text-3xl text-[#243246] dark:text-gray-200 mb-8">
      {{t 'register-page.welcome'}}
    </h3>
    <div class="mb-4">
      <p class="text-gray-500 dark:text-gray-200 font-light">
        {{t 'register-page.create-account'}}
      </p>
    </div>
    <form {{on 'submit' this.createAccount}}>
      <Forms::User @username={{this.username}} @password={{this.password}} />
      <Button @type="submit" class="w-full mt-8 bg-[#3d39a0] text-white">
        {{t 'register-page.create-account-button'}}
      </Button>
    </form>
    <div class="text-center mt-8 font-light text-gray-500 dark:text-gray-300">
      {{t 'register-page.already-have-an-account'}}
      <LinkTo @route="login" class="font-bold hover:underline">
        {{t 'login-page.login-button'}}
      </LinkTo>
    </div>
  </div>
</LoginRegisterPageLayout>