{{page-title 'Login'}}
<div class="flex justify-center items-center h-full z-10">
  <div class="basis-1/2 h-full hidden xl:inline">
    <HeroSection />
  </div>
  <div class="basis-1/2 flex flex-col justify-around items-center h-full">
    <div>
      {{! Empty div is here on purpose of centering divs }}
    </div>
    <div
      class="card bg-white dark:bg-gray-800 h-fit p-8 fade-in-animation shadow-lg"
    >
      <div
        class="flex flex-col justify-center border-opacity-50 w-[22rem] xl:w-[25rem]"
      >
        <h3
          class="font-semibold text-3xl text-[#243246] dark:text-gray-200 mb-8"
        >
          {{t 'login-page.login'}}
        </h3>
        <Button
          class="mb-1 w-full bg-gray-100 dark:bg-gray-900"
          {{on 'click' this.loginWithDemoUser}}
        >
          <span class="whitespace-nowrap flex items-center">
            <FaIcon
              @icon="user-doctor"
              class="text-[#3d39a0] text-xl xl:mr-1.5"
            />
            {{t 'login-page.login-demo-user-button'}}
          </span>
        </Button>
        <div class="divider text-gray-400 my-6">
          {{t 'login-page.or'}}
        </div>
        <div class="mb-4">
          <p class="text-gray-500 dark:text-gray-300 font-light">
            {{t 'login-page.sign-in-text'}}
          </p>
        </div>
        <form {{on 'submit' this.signIn}}>
          <Forms::User
            @username={{this.username}}
            @password={{this.password}}
          />
          <Button @type="submit" class="w-full mt-8 bg-[#3d39a0] text-white">
            {{t 'login-page.login-button'}}
          </Button>
        </form>
        <div
          class="text-center mt-8 font-light text-gray-500 dark:text-gray-300"
        >
          {{t 'login-page.dont-have-an-account'}}
          <LinkTo @route="register" class="font-bold hover:underline">
            {{t 'login-page.sign-up'}}
          </LinkTo>
        </div>
      </div>
    </div>
    <div class="font-light opacity-50 flex items-center gap-1">
      <CopyrightInfo />
    </div>
  </div>
</div>