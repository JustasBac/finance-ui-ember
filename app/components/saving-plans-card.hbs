<div class="card bg-base-100 shadow-xl" ...attributes>
  <div
    class="card-body flex flex-col justify-between h-[19rem] p-6 fade-in-animation"
  >
    <h2 class="text-xl ml-4">
      Saving Plans
    </h2>
    {{#if this.requestService.isAppDataLoading}}
      <div class="text-center">
        <span class="loading loading-ring loading-lg"></span>
      </div>
    {{else if this.savingPlanService.savingPlans}}
      <div class="overflow-auto">
        <table class="table w-full">
          {{! head }}
          <thead>
            <tr>
              <th class="bg-base-100 !relative">
                Name
              </th>
              <th class="bg-base-100 hidden xl:flex">
                Progress
              </th>
              <th class="bg-base-100">
                Deadline
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each this.savingPlanService.savingPlans as |savingPlan|}}
              <tr>
                <td>
                  {{savingPlan.title}}
                </td>
                <td class="hidden xl:flex">
                  <div class="flex flex-col mt-2">
                    <span class="text-xs leading-[0]">
                      {{savingPlan.totalBalance}}
                      {{get
                        (find-by
                          'code'
                          savingPlan.currencyCode
                          this.userService.currencies
                        )
                        'symbol'
                      }}
                    </span>
                    <div>
                      <progress
                        class="progress progress-primary w-60"
                        value="10"
                        max="100"
                      ></progress>
                      <span class="opacity-50 text-xs">
                        {{savingPlan.targetAmount}}
                        {{get
                          (find-by
                            'code'
                            savingPlan.currencyCode
                            this.userService.currencies
                          )
                          'symbol'
                        }}
                      </span>
                    </div>
                  </div>
                </td>
                <td>
                  {{moment-format savingPlan.deadlineDate 'MMMM DD, YYYY'}}
                </td>
                <td>
                  <LinkTo
                    class="btn btn-outline btn-primary btn-sm"
                    type="button"
                    @route="saving-plan-detailed-view"
                    @model={{savingPlan.id}}
                  >
                    Details
                  </LinkTo>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="flex justify-center">
        <Alert @text="You have no saving plans" />
      </div>
    {{/if}}
    <div class="self-end mt-4">
      <Modals::CreateNewSavingPlan />
    </div>
  </div>
</div>