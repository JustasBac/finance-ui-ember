<div class="ml-16 card grow bg-base-100 shadow-xl">
  <div class="card-body flex flex-col justify-between">
    <h2 class="text-xl ml-4">
      Saving Plans
    </h2>
    <table class="table w-full">
      {{! head }}
      <thead>
        <tr>
          <th class="bg-base-100">
            Name
          </th>
          <th class="bg-base-100">
            Progress
          </th>
          <th class="bg-base-100">
            Deadline
          </th>
          <th class="bg-base-100"></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.savingPlanService.savingPlans as |savingPlan|}}
          <tr>
            <td>
              {{savingPlan.title}}
            </td>
            <td>
              <div class="flex flex-col">
                <span class="text-xs leading-[0]">
                  {{savingPlan.savedAmount}}
                  {{get
                    (find-by
                      'code'
                      savingPlan.currencyCode
                      this.currencyService.currencies
                    )
                    'symbol'
                  }}
                </span>
                <div>
                  <progress
                    class="progress progress-primary w-60"
                    value="10"
                    max="100"
                  ></progress>
                  <span class="opacity-50 text-xs">
                    {{savingPlan.targetAmount}}
                    {{get
                      (find-by
                        'code'
                        savingPlan.currencyCode
                        this.currencyService.currencies
                      )
                      'symbol'
                    }}
                  </span>
                </div>
              </div>
            </td>
            <td>
              {{moment-format savingPlan.deadlineDate 'MMMM DD, YYYY'}}
            </td>
            <td>
              <LinkTo
                class="btn btn-outline btn-primary btn-sm"
                type="button"
                @route="saving-plan-detailed-view"
                @model={{savingPlan.id}}
              >
                Details
              </LinkTo>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>