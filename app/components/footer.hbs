<footer
  class="xl:h-9 flex items-center justify-between p-2 xl:p-4 bg-navbar-footer text-neutral-content"
  ...attributes
>
  <div class="xl:text-base flex items-center whitespace-nowrap">
    <div class="avatar mr-1">
      <div class="w-4 xl:w-5 rounded">
        <img src="/assets/images/ember-logo.png" alt="Logo" />
      </div>
    </div>
    <span class="text-sm">
      {{t 'footer.built-with'}}
    </span>
  </div>
  <div class="text-right text-xl">
    <a href={{this.linkedinLink}} target="_blank" rel="noopener noreferrer">
      <FaIcon
        @icon="linkedin"
        @prefix="fa-brands"
        class="mr-1 hover:text-white cursor-pointer"
      />
    </a>
    <a href={{this.githubLink}} target="_blank" rel="noopener noreferrer">
      <FaIcon
        @icon="square-github"
        @prefix="fa-brands"
        class="hover:text-white cursor-pointer"
      />
    </a>
  </div>
</footer>