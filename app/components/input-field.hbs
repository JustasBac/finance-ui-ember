<div class="form-control w-full" ...attributes>
  <label class="label py-1">
    <span class="label-text leading-none">
      {{@label}}
    </span>
  </label>
  <input
    value={{@value}}
    type={{this.type}}
    min={{@min}}
    placeholder={{@placeholder}}
    class="input input-bordered w-full
      {{this.size}}

      {{unless this.isFormValidated 'input-error'}}"
    {{on 'input' this.updateInputValue}}
  />
</div>