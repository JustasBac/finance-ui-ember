<div class="card bg-base-100 dark:bg-gray-800 shadow-xl" ...attributes>
  <div class="card-body flex flex-col py-3 px-6 fade-in-animation">
    <h2 class="text-base text-center text-gray-600 dark:text-gray-200">
      {{t 'home-page.spendings'}}
      <div class="text-gray-500 dark:text-gray-400 text-sm">
        {{moment-format (now) 'MMMM YYYY'}}
      </div>
    </h2>
    <div class="flex justify-center items-center">
      <p
        class="text-2xl font-bold whitespace-nowrap lowercase flex justify-center py-2 dark:text-gray-300"
      >
        {{#if this.requestService.isAppDataLoading}}
          <span class="loading loading-ring loading-lg"></span>
        {{else}}
          <span class="flex">
            {{if
              this.currentMonthData.spendings
              this.currentMonthData.spendings
              '-'
            }}
            <CurrencyInfo
              class={{unless this.currentMonthData.spendings 'ml-1'}}
              @currencyCode={{this.currentMonthData.currencyCode}}
            />
          </span>
        {{/if}}
      </p>
    </div>
  </div>
</div>