{{#if this.previousRoute}}
  {{#if this.queryParams}}
    <LinkTo
      @route={{this.previousRoute}}
      @model={{this.queryParams}}
      class="btn btn-neutral w-28"
      ...attributes
    >
      <div class="flex whitespace-nowrap">
        <FaIcon @icon="arrow-left" class="mr-1" />
        {{t 'go-back-button'}}
      </div>
    </LinkTo>
  {{else}}
    <LinkTo
      @route={{this.previousRoute}}
      class="btn btn-neutral w-28"
      ...attributes
    >
      <div class="flex whitespace-nowrap">
        <FaIcon @icon="arrow-left" class="mr-1" />
        {{t 'go-back-button'}}
      </div>
    </LinkTo>
  {{/if}}
{{/if}}