<InputField
  class="mb-4"
  @value={{@username}}
  @onInput={{fn (mut @username)}}
  @label={{t 'login-page.username'}}
  @placeholder={{t 'login-page.username-placeholder'}}
  {{will-destroy this.resetFormValidations}}
/>
<InputField
  @value={{@password}}
  @onInput={{fn (mut @password)}}
  @type="password"
  @label={{t 'login-page.password'}}
  @placeholder={{t 'login-page.password-placeholder'}}
/>