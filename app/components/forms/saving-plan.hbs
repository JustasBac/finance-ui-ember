<InputField
  @value={{@savingPlanInformation.title}}
  @label="Goal name"
  @onInput={{fn (mut @savingPlanInformation.title)}}
  @placeholder="Enter goal name"
/>
<DatePicker
  @selectedDate={{@savingPlanInformation.deadlineDate}}
  @onDateChange={{fn (mut @savingPlanInformation.deadlineDate)}}
/>
<div class="flex">
  <InputField
    class="mt-3"
    @type="number"
    @value={{@savingPlanInformation.targetAmount}}
    @min={{1}}
    @label="Target amount"
    @onInput={{fn (mut @savingPlanInformation.targetAmount)}}
    @placeholder="Enter target amount"
  />
  <div class="basis-1/3 ml-2 mt-3">
    <label class="label py-1">
      <span class="label-text leading-none">
        Currency
      </span>
    </label>
    <PowerSelect
      class="h-[3rem] !p-2"
      @selected={{this.selectedCurrency}}
      @options={{this.currencyService.currencies}}
      @searchEnabled={{true}}
      @searchField="searchableText"
      @onChange={{this.changeCurrency}} as |currency|
    >
      {{currency.code}}
      <span class="text-xs opacity-70">
        {{concat '(' currency.symbol ')'}}
      </span>
    </PowerSelect>
  </div>
</div>
<InputField
  class="mt-3"
  @type="number"
  @value={{@savingPlanInformation.savedAmount}}
  @min={{1}}
  @label="Saved amount"
  @onInput={{fn (mut @savingPlanInformation.savedAmount)}}
  @placeholder="Enter saved amount"
/>