<InputField
  @value={{@savingPlanInformation.title}}
  @label="Goal name"
  @onInput={{fn (mut @savingPlanInformation.title)}}
  @placeholder="Enter goal name"
/>
<DatePicker
  @selectedDate={{@savingPlanInformation.deadlineDate}}
  @onDateChange={{fn (mut @savingPlanInformation.deadlineDate)}}
/>
<div class="flex">
  <InputField
    class="mt-3"
    @type="number"
    @value={{@savingPlanInformation.goalAmount}}
    @min={{1}}
    @label="Goal amount"
    @onInput={{fn (mut @savingPlanInformation.goalAmount)}}
    @placeholder="Enter goal amount"
  />
  <InputField
    class="mt-3 basis-1/3 ml-2"
    @value={{@savingPlanInformation.currency}}
    @onInput={{fn (mut @savingPlanInformation.currency)}}
    @label="Currency"
    @placeholder="â‚¬"
  />
</div>