<div class="mt-3">
  <label class="label py-1">
    <span class="label-text leading-none">
      Currency
    </span>
  </label>
  <PowerSelect
    class="h-[3rem] !p-2"
    @selected={{this.selectedCurrency}}
    @options={{this.userService.currencies}}
    @searchEnabled={{true}}
    @searchField="searchableText"
    @onChange={{this.changeCurrency}} as |currency|
  >
    {{currency.code}}
    <span class="text-xs opacity-70">
      {{concat '(' currency.symbol ')'}}
    </span>
  </PowerSelect>
</div>
<InputField
  class="mt-3"
  @type="number"
  @value={{@data.income}}
  @min={{1}}
  @label="Income ({{this.selectedCurrency.symbol}})"
  @onInput={{fn (mut @data.income)}}
  @placeholder="Enter income"
/>
<InputField
  class="mt-3"
  @type="number"
  @value={{@data.spendings}}
  @min={{1}}
  @label="Spendings ({{this.selectedCurrency.symbol}})"
  @onInput={{fn (mut @data.spendings)}}
  @placeholder="Enter spendings"
/>
<InputField
  class="mt-3"
  @type="number"
  @value={{@data.totalBalance}}
  @min={{1}}
  @label="Total balance ({{this.selectedCurrency.symbol}})"
  @onInput={{fn (mut @data.totalBalance)}}
  @placeholder="Enter total balance"
/>