<div class="card dark:bg-gray-800 h-36 bg-base-100 shadow-xl" ...attributes>
  <div
    class="card-body flex flex-col justify-start items-center p-4 relative fade-in-animation"
  >
    <h2 class="text-base text-gray-600 dark:text-gray-200">
      {{t 'home-page.total-balance.title'}}
      <div
        class="text-sm text-gray-500 dark:text-gray-400 text-center capitalize"
      >
        {{moment-format (now) 'MMMM YYYY'}}
      </div>
      <LinkTo
        @route="finance-panel"
        class="btn btn-sm btn-ghost text-sm float-right absolute top-3 right-2"
        type="button"
      >
        <FaIcon @icon="sliders" />
        <Tooltip>
          {{t 'home-page.total-balance.open-panel-tooltip'}}
        </Tooltip>
      </LinkTo>
    </h2>
    <p
      class="text-2xl font-bold whitespace-nowrap lowercase flex justify-center py-2 dark:text-gray-300"
    >
      {{#if this.requestService.isAppDataLoading}}
        <span class="loading loading-ring loading-lg"></span>
      {{else}}
        {{this.currentMonthTotalBalance}}
        <CurrencyInfo
          class={{if (eq this.currentMonthTotalBalance '-') 'ml-1'}}
          @currencyCode={{this.userService.selectedCurrency.currencyCode}}
        />
      {{/if}}
    </p>
  </div>
</div>