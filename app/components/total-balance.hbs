<div class="card h-36 bg-base-100 shadow-xl" ...attributes>
  <div
    class="card-body flex flex-col justify-start items-center p-4 relative fade-in-animation"
  >
    <h2 class="text-base text-gray-600">
      {{t 'home-page.total-balance.title'}}
      <span class="ml-1">
        <FaIcon @icon="circle-info" />
        <Tooltip>
          {{t 'home-page.total-balance.tooltip-info'}}
        </Tooltip>
      </span>
      <div class="text-sm text-gray-500 text-center">
        {{moment-format (now) 'MMMM YYYY'}}
      </div>
      <LinkTo
        @route="finance-panel"
        class="btn btn-sm btn-ghost text-sm float-right absolute top-3 right-2"
        type="button"
      >
        <FaIcon @icon="sliders" />
        <Tooltip>
          {{t 'home-page.total-balance.open-panel-tooltip'}}
        </Tooltip>
      </LinkTo>
    </h2>
    {{#if this.userService.initialTotalBalance}}
      <p
        class="text-2xl font-bold whitespace-nowrap lowercase flex justify-center py-2"
      >
        {{#if this.requestService.isAppDataLoading}}
          <span class="loading loading-ring loading-lg"></span>
        {{else}}
          {{this.currentMonthTotalBalance}}
          <CurrencyInfo
            @currencyCode={{this.userService.selectedCurrency.currencyCode}}
          />
        {{/if}}
      </p>
    {{else}}
      <Modals::AddOrEditInitialTotalBalance />
    {{/if}}
  </div>
</div>