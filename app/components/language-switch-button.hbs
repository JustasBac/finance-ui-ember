<ul class="menu menu-horizontal !pl-0" ...attributes>
  <li class="rounded-lg {{@backgroundColor}}">
    <details {{did-insert this.registerElement}}>
      <summary class="xl:!text-white">
        {{#if (eq this.intl.primaryLocale 'en-us')}}
          <img
            class="object-fill w-8 h-5 rounded fade-in-animation"
            src="/assets/images/english-flag.png"
            alt="English flag"
          />
        {{else if (eq this.intl.primaryLocale 'de-de')}}
          <img
            class="object-fill w-8 h-5 rounded fade-in-animation dark:outline dark:outline-gray-800"
            src="/assets/images/german-flag.png"
            alt="German flag"
          />
        {{else if (eq this.intl.primaryLocale 'lt-lt')}}
          <img
            class="object-fill w-8 h-5 rounded fade-in-animation dark:outline dark:outline-gray-800"
            src="/assets/images/lithuanian-flag.png"
            alt="Lithuanian flag"
          />
        {{/if}}
      </summary>
      <ul
        class="bg-base-100 dark:bg-gray-700 shadow text-gray-700 dark:text-gray-200 z-50 w-32 flex flex-col justify-center items-center dark:shadow-gray-900"
      >
        <li class="w-full">
          <div
            class="swap-on flex items-center gap-1 dark:hover:text-white"
            {{on 'click' (fn this.switchLanguage 'en-us')}}
          >
            <img
              class="object-fill w-8 h-5 rounded"
              src="/assets/images/english-flag.png"
              alt="English flag"
            />
            English
          </div>
        </li>
        <li class="w-full">
          <div
            class="swap-off flex items-center gap-1 dark:hover:text-white"
            {{on 'click' (fn this.switchLanguage 'de-de')}}
          >
            <img
              class="object-fill w-8 h-5 rounded"
              src="/assets/images/german-flag.png"
              alt="German flag"
            />
            Deutsch
          </div>
        </li>
        <li class="w-full">
          <div
            class="swap-off flex items-center gap-1 dark:hover:text-white"
            {{on 'click' (fn this.switchLanguage 'lt-lt')}}
          >
            <img
              class="object-fill w-8 h-5 rounded"
              src="/assets/images/lithuanian-flag.png"
              alt="Lithuanian flag"
            />
            Lietuvi≈≥
          </div>
        </li>
      </ul>
    </details>
  </li>
</ul>